rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user data from the users collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Churches: Allow creation by any authenticated user (initial registration).
    // Read/Update restricted to church staff.
    match /churches/{churchId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && getUserData().churchId == churchId;
      allow update: if isAuthenticated() && getUserData().churchId == churchId && getUserData().role == 'Church Admin';
    }

    // Users: Users can manage their own profile. Staff can view user data in their church.
    match /users/{userId} {
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        (getUserData().churchId == resource.data.churchId && getUserData().role in ['Church Admin', 'Finance Officer'])
      );
      allow update: if isAuthenticated() && request.auth.uid == userId;
    }

    // Members: Managed by Church Admin or Finance Officer.
    match /members/{memberId} {
      allow read, write: if isAuthenticated() && 
        (resource == null ? request.resource.data.churchId : resource.data.churchId) == getUserData().churchId && 
        getUserData().role in ['Church Admin', 'Finance Officer'];
    }

    // Transactions: Isolated by churchId.
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (
        (getUserData().churchId == resource.data.churchId && getUserData().role in ['Church Admin', 'Finance Officer']) ||
        (request.auth.uid == resource.data.memberUid)
      );
      allow create: if isAuthenticated() && 
        getUserData().churchId == request.resource.data.churchId && 
        getUserData().role in ['Church Admin', 'Finance Officer'];
      allow update, delete: if isAuthenticated() && 
        getUserData().churchId == resource.data.churchId && 
        getUserData().role == 'Church Admin';
    }

    // SMS Reminders: Admin only within their church.
    match /smsReminders/{reminderId} {
      allow read, write: if isAuthenticated() && 
        (resource == null ? request.resource.data.churchId : resource.data.churchId) == getUserData().churchId && 
        getUserData().role == 'Church Admin';
    }
  }
}
